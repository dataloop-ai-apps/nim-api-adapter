{
  "name": "nim-mixtral8-7b-instruct",
  "displayName": "Mixtral 8x7B Instruct",
  "version": "0.1.29",
  "scope": "public",
  "description": "Downloadable Mixtral from NIM",
  "attributes": {
    "Hub": [
      "Nvidia",
      "Dataloop"
    ],
    "Provider": "Meta",
    "Deployed By": "Dataloop",
    "Category": "Model",
    "Gen AI": "LLM",
    "Media Type": [
      "Text"
    ],
    "NLP": "Conversational"
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/nim-api-adapter",
    "gitTag": "0.1.29"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "mixtral8x7b-nim-deploy",
        "runtime": {
          "podType": "gpu-a100-s",
          "concurrency": 10,
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/gpu/mixtral8-7b-instruct:0.1.4",
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2
          }
        }
      }
    ],
    "modules": [
      {
        "name": "mixtral8x7b-nim-module",
        "entryPoint": "adapters/container_nims/main_adapter.py",
        "className": "ModelAdapter",
        "computeConfig": "mixtral8x7b-nim-deploy",
        "description": "Downloadable Mixtral 8x7b NIM Adapter module",
        "initInputs": [
          {
            "type": "Model",
            "name": "model_entity"
          }
        ],
        "functions": [
          {
            "name": "predict_items",
            "input": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "List of items to run inference on"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The same input images for prediction."
              },
              {
                "type": "Annotation[]",
                "name": "annotations",
                "description": "The predicted annotations."
              }
            ],
            "displayName": "Predict Items",
            "displayIcon": "",
            "description": "NIM mixtral 8x7b predict items"
          }
        ]
      }
    ],
    "models": [
      {
        "name": "mixtral8x7b-nim",
        "moduleName": "mixtral8x7b-nim-module",
        "scope": "project",
        "status": "pre-trained",
        "configuration": {
          "model_name": "mistralai/mixtral-8x7b-instruct-v0.1",
          "system_prompt": "You are a helpful and a bit cynical assistant. Give relevant and short answers, if you dont know the answer just say it, dont make up an answer",
          "max_tokens": 1024,
          "temperature": 0.2,
          "top_p": 0.70,
          "seed": 0
        },
        "description": "Mixtral 8x7b instruct downloadable nim"
      }
    ]
  }
}