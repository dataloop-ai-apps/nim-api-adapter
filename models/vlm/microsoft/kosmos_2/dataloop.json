{
  "name": "nim-api-kosmos-2",
  "displayName": "kosmos-2",
  "version": "0.3.32",
  "scope": "public",
  "description": "Groundbreaking multimodal model designed to understand and reason about visual elements in images.",
  "attributes": {
    "Hub": ["Nvidia", "Dataloop"],
    "Provider": "Microsoft",
    "Deployed By": "NVIDIA",
    "Category": ["Model", "NIM"],
    "Gen AI": "LMM",
    "Media Type": ["Multi Modal"],
    "NLP": "Conversational"
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/nim-api-adapter",
    "gitTag": "0.3.32"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "nim-api-deploy",
        "runtime": {
          "podType": "regular-xs",
          "concurrency": 1,
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/apps/nim-api-adapter:0.1.11",
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2
          }
        }
      }
    ],
    "modules": [
      {
        "name": "nim-api-module",
        "entryPoint": "models/vlm/base.py",
        "className": "ModelAdapter",
        "computeConfig": "nim-api-deploy",
        "description": "microsoft-kosmos-2 NIM API Adapter",
        "integrations": ["dl-ngc-api-key"],
        "initInputs": [
          {
            "type": "Model",
            "name": "model_entity"
          }
        ],
        "functions": [
          {
            "name": "predict_items",
            "input": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "List of items to run inference on"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The same input images for prediction."
              },
              {
                "type": "Annotation[]",
                "name": "annotations",
                "description": "The predicted annotations."
              }
            ],
            "displayName": "Predict Items",
            "displayIcon": "",
            "description": "NIM API microsoft-kosmos-2 predict items"
          }
        ]
      }
    ],
    "models": [
      {
        "name": "kosmos-2",
        "moduleName": "nim-api-module",
        "scope": "project",
        "status": "pre-trained",
        "configuration": {
          "nim_model_name": "vlm/microsoft/kosmos-2",
          "max_tokens": 1024,
          "temperature": 0.2,
          "top_p": 0.2,
          "model_type": "multimodal",
          "is_downloadable": false
        },
        "description": "Kosmos-2 model is a groundbreaking multimodal large language model (MLLM)."
      }
    ]
  }
}
