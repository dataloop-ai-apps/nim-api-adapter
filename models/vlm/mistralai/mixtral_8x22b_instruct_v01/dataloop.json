{
  "name": "mixtral-8x22b-instruct",
  "displayName": "mixtral-8x22b-instruct-v0.1",
  "version": "0.3.27",
  "scope": "public",
  "description": "An MOE LLM that follows instructions, completes requests, and generates creative text.",
  "attributes": {
    "Hub": ["Nvidia", "Dataloop"],
    "Provider": "MistralAI",
    "Deployed By": "NVIDIA",
    "Category": ["Model", "NIM"],
    "Gen AI": ["LLM", "Code Generation"],
    "Media Type": ["Text"]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/nim-api-adapter",
    "gitTag": "0.3.27"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "nim-api-deploy",
        "runtime": {
          "podType": "regular-xs",
          "concurrency": 1,
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/cpu/nim-api:0.1.10",
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2
          }
        }
      }
    ],
    "modules": [
      {
        "name": "nim-api-module",
        "entryPoint": "models/vlm/base.py",
        "className": "ModelAdapter",
        "computeConfig": "nim-api-deploy",
        "description": "mixtral-8x22b-instruct NIM API Adapter",
        "integrations": ["dl-ngc-api-key"],
        "initInputs": [
          {
            "type": "Model",
            "name": "model_entity"
          }
        ],
        "functions": [
          {
            "name": "predict_items",
            "input": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "List of items to run inference on"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The same input images for prediction."
              },
              {
                "type": "Annotation[]",
                "name": "annotations",
                "description": "The predicted annotations."
              }
            ],
            "displayName": "Predict Items",
            "displayIcon": "",
            "description": "NIM API mixtral-8x22b-instruct predict items"
          }
        ]
      }
    ],
    "models": [
      {
        "name": "mixtral-8x22b-instruct-v01",
        "moduleName": "nim-api-module",
        "scope": "project",
        "status": "pre-trained",
        "configuration": {
          "nim_model_name": "mistralai/mixtral-8x22b-instruct-v0.1",
          "system_prompt": "You are a helpful and a bit cynical assistant. Give relevant and short answers, if you dont know the answer just say it, dont make up an answer",
          "max_tokens": 1024,
          "temperature": 0.5,
          "top_p": 1,
          "seed": 0,
          "stream": true,
          "model_type": "chat_only_text",
          "is_downloadable": false
        },
        "description": "It is a sparse Mixture-of-Experts (SMoE) model that uses only 39B active parameters out of 141B, offering unparalleled cost efficiency for its size."
      }
    ]
  }
}
