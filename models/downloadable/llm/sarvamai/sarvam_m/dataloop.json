{
    "version": "0.1.0",
    "name": "nim-sarvamai-sarvam-m-downloadable",
    "displayName": "NIM Sarvam M Downloadable",
    "description": "NVIDIA NIM Sarvam M adapter - runs start_server.sh and streams logs",
    "scope": "project",
    "attributes": {
        "Category": ["Application", "NIM"],
        "Provider": "NVIDIA",
        "Application Type": "Model"
    },
    "components": {
        "modules": [
            {
                "name": "sarvamai-sarvam-m-downloadable-module",
                "entryPoint": "models/downloadable/main.py",
                "className": "Runner",
                "initInputs": [],
                "integrations": [
                    "dl-ngc-api-key"
                ],
                "config": {
                    "isCustomServer": true
                },
                "functions": [
                    {
                        "name": "dummy",
                        "output": [],
                        "input": []
                    }
                ]
            }
        ],
        "panels": [
            {
                "name": "sarvamai-sarvam-m-downloadable-panel",
                "supportedSlots": [
                    {
                        "type": "datasetBrowser",
                        "configuration": {}
                    }
                ],
                "conditions": {}
            }
        ],
        "services": [
            {
                "name": "sarvamai-sarvam-m-downloadable-runner",
                "displayName": "sarvamai-sarvam-m-downloadable-runner",
                "moduleName": "sarvamai-sarvam-m-downloadable-module",
                "panelNames": [
                    "sarvamai-sarvam-m-downloadable-panel"
                ],
                "initParams": {},
                "runtime": {
                    "podType": "gpu-t4-m",
                    "numReplicas": 1,
                    "concurrency": 10,
                    "runnerImage": "hub.dataloop.ai/dataloop/piper/agent/runner/gpu/sarvamai-sarvam-m:0.3.42",
                    "singleAgent": false,
                    "autoscaler": {
                        "type": "rabbitmq",
                        "minReplicas": 1,
                        "maxReplicas": 1,
                        "queueLength": 1
                    },
                    "preemptible": false
                },
                "drainTime": 600,
                "onReset": "failed",
                "runExecutionAsProcess": false,
                "executionTimeout": 3600,
                "maxAttempts": 3
            }
        ]
    }
}