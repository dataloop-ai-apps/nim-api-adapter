{
  "name": "nim-bge-m3",
  "displayName": "NIM Bge M3",
  "version": "0.3.35",
  "scope": "public",
  "description": "NVIDIA NIM adapter for baai/bge-m3",
  "attributes": {
    "Category": [
      "Model",
      "NIM"
    ],
    "NLP": "Embeddings",
    "Provider": "Baai",
    "Media Type": [
      "Text"
    ],
    "Hub": [
      "Nvidia",
      "Dataloop"
    ],
    "Deployed By": "NVIDIA"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "nim-bge-m3-deploy",
        "runtime": {
          "podType": "regular-xs",
          "concurrency": 1,
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 100
          },
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/apps/openai-model-adapters:0.0.14"
        }
      }
    ],
    "modules": [
      {
        "name": "nim-bge-m3-module",
        "entryPoint": "models/api/embeddings/base.py",
        "className": "ModelAdapter",
        "computeConfig": "nim-bge-m3-deploy",
        "description": "NVIDIA NIM adapter for baai/bge-m3",
        "initInputs": [
          {
            "type": "Model",
            "name": "model_entity"
          }
        ],
        "functions": [
          {
            "name": "embed_items",
            "input": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The input items for embeddings."
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The same input items for embeddings."
              },
              {
                "type": "Json",
                "name": "json",
                "description": "Embeddings of items."
              }
            ],
            "displayName": "Embed Items",
            "displayIcon": "",
            "description": "The inference function of the model."
          },
          {
            "name": "embed_dataset",
            "input": [
              {
                "type": "Dataset",
                "name": "dataset",
                "description": "The input dataset of the items required for prediction."
              },
              {
                "type": "Json",
                "name": "filters",
                "description": "The DQL in json format to get all the items required for prediction."
              }
            ],
            "output": [],
            "displayName": "Embed Dataset",
            "displayIcon": "",
            "description": "Inference function of the model on a dataset."
          }
        ],
        "integrations": [
          "dl-ngc-api-key"
        ]
      }
    ],
    "models": [
      {
        "name": "nim-bge-m3",
        "moduleName": "nim-bge-m3-module",
        "scope": "public",
        "status": "pre-trained",
        "inputType": "text",
        "outputType": "embedding",
        "description": "NVIDIA NIM adapter for baai/bge-m3",
        "configuration": {
          "nim_model_name": "baai/bge-m3"
        }
      }
    ]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/nim-api-adapter",
    "gitTag": "0.3.35"
  }
}