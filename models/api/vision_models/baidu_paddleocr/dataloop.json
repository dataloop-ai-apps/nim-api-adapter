{
  "name": "baidu-paddleocr",
  "displayName": "baidu-paddleocr",
  "version": "0.3.7",
  "scope": "public",
  "description": "PaddleOCR is an ultra-lightweight OCR system by Baidu, supporting advanced OCR algorithms, served by NIM API.",
  "attributes": { 
    "Hub": [
      "Nvidia",
      "Dataloop"
    ],
    "Provider": "NVIDIA",
    "Deployed By": "NVIDIA",
    "Category": [
      "Model",
      "NIM"
    ],
    "Computer Vision": "Object Detection",
    "Media Type": ["Image"]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/nim-api-adapter",
    "gitTag": "0.3.7"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "nim-api-deploy",
        "runtime": {
          "podType": "regular-xs",
          "concurrency": 1,
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/cpu/nim-api:0.1.10",
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2
          }
        }
      }
    ],
    "modules": [
      {
        "name": "nim-api-module",
        "entryPoint": "models/api/vision_models/vision_model_adapter.py",
        "className": "ModelAdapter",
        "computeConfig": "nim-api-deploy",
        "description": "NIM API Adapter for PaddleOCR, supporting advanced OCR algorithms.",
        "integrations": [
          "dl-ngc-api-key"
        ],
        "initInputs": [
          {
            "type": "Model",
            "name": "model_entity"
          }
        ],
        "functions": [
          {
            "name": "predict_items",
            "input": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "List of items to run inference on"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The same input images for prediction."
              },
              {
                "type": "Annotation[]",
                "name": "annotations",
                "description": "The predicted annotations."
              }
            ],
            "displayName": "Predict Items",
            "displayIcon": "",
            "description": "Predict items using PaddleOCR via NIM API."
          }
        ]
      }
    ],
    "models": [
      {
        "name": "baidu-paddleocr",
        "moduleName": "nim-api-module",
        "scope": "project",
        "status": "pre-trained",
        "configuration": {
          "nim_invoke_url": "cv/baidu/paddleocr"
        },
        "description": "PaddleOCR model for OCR, served by NIM API."
      }
    ]
  }
}